<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/colorBackground"
    tools:context=".gameModule.GameFragment"
    android:padding="8dp">


    <TextView
        android:id="@+id/txt_player1"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        tools:text="Claire"
        android:textSize="25sp"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/txt_player2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/txtScorePlayer1"/>

    <TextView
        android:id="@+id/txt_player2"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        tools:text="Javier"
        android:textSize="25sp"
        android:textAlignment="center"
        app:layout_constraintStart_toEndOf="@id/txt_player1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/txtScorePlayer2"
        />

    <TextView
        android:id="@+id/txtScorePlayer1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/recyclerView_hist"
        app:layout_constraintEnd_toStartOf="@id/txtScorePlayer2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_player1"
        tools:text="50" />

    <TextView
        android:id="@+id/txtScorePlayer2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/recyclerView_hist"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txtScorePlayer1"
        app:layout_constraintTop_toBottomOf="@+id/txt_player2"
        tools:text="45" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView_hist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:flow_maxElementsWrap="5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:itemCount="5"
        tools:listitem="@layout/item_hist" />


</androidx.constraintlayout.widget.ConstraintLayout>